<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReferEarnFragment.ReferEarn">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="-25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/referearn"/>

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You Both Will get â‚¹ 5"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_margin="10dp"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="10dp"
                android:id="@+id/referId"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:background="@drawable/background"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap Below to Copy Refer Code"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Copy"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/copy"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:weightSum="5">


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/register_vector"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_navigate_next_black_24dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/play_vector"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_navigate_next_black_24dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_navigate_next_black_24dp"
                    android:background="@drawable/money_vector"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"

                        android:text="User Registers"
                      android:textColor="@color/colorPrimary"
                     android:textSize="12sp"
                     android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Joins a Match"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="You get Reward"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>


   </FrameLayout>